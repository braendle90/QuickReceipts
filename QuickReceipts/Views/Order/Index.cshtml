@{


}


<h1 class="text-center">@Model.Orders.OrderNumber</h1>


<br />

<h3>Produktliste</h3>



<table id="dtBasicExample" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th class="th-sm">
                Stückzahl
            </th>
            <th class="th-sm">
                Name
            </th>
            <th class="th-sm">
                Beschreibung
            </th>
            <th class="th-sm">
                Preis
            </th>
            <th class="th-sm">
                Summe
            </th>
        </tr>
    </thead>
    <tbody>



        @foreach (var item in Model.Products)
        {

            <tr>


                <td>@item.Pieces</td>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Price @Model.CurrencySymbol</td>
            </tr>
        }

    </tbody>
</table>